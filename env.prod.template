# LDAP_ENABLED=true
# LDAP_HOST=ldap.example.com
# LDAP_PORT=389
# LDAP_SSL=false
# LDAP_TLS=false
# LDAP_BASE=dc=example,dc=com
# LDAP_UID=cn
# LDAP_BIND_UID=admin
# LDAP_BIND_PASSWORD=admin-password